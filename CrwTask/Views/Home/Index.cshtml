@model List<CrwTask.Models.Teams>

<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js"></script>


<table class="table">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">ID</th>
            <th scope="col">Name</th>
            <th scope="col">Logo</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model) {
            <tr>
                <td scope="row">@item.ID</td>
                @*            <td>@Url.Action("VeriAl", "Home", new { id = item.ID })</td>*@
                <td>
                    @Html.ActionLink("Details", "TeamDetails", new { id = item.ID })
                </td>
                <td>@item.Name</td>
                <td><img src="@item.Logo" /></td>
            </tr>
        }
    </tbody>
</table>

<div>
  Team Name:  <input type="text" id="teamName" />
  Team Logo:  <input type="text" id="teamLogo" />
    <input type="submit" id="btnPost" value="Save" />
</div>

<script>
        $(document).ready(function () {
            $("#btnPost").click(function () {
                $.ajax(
                    {
                        type: "POST",
                        url: "/Home/AddTeam",
                        data: {
                            Name: $("#teamName").val(),
                            Logo: $("#teamLogo").val()
                        }

                    });

            });
        });

    </script>
